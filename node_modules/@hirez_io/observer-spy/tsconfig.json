{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true, // generate .d.ts files
    "declarationMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es2016"],
    "pretty": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
